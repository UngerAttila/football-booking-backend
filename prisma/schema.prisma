generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pitch {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  location     String
  surfaceType  String
  pricePerHour Int
  hasLights    Boolean   @default(false)
  isIndoor     Boolean   @default(false)
  size         String?
  description  String?
  bookings     Booking[]
}

model Referee {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  experience   String?
  pricePerGame Int
  phone        String?
  email        String?
  bookings     Booking[]
}

model Booking {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  pitchId   String   @db.ObjectId
  refereeId String?  @db.ObjectId
  date      DateTime
  startTime String
  endTime   String
  teamName  String
  contact   String
  status    String   @default("confirmed")

  pitch   Pitch    @relation(fields: [pitchId], references: [id])
  referee Referee? @relation(fields: [refereeId], references: [id])
}
